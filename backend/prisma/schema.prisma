generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  name String @unique
  email String @unique
  password String
  phone String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Hotel {
  hotel_id       Int @default(autoincrement()) @id 
  guest_id       Int
  room_id        String
  name           String @unique
  address        String @unique
  cost           Int
  check_in_date  DateTime @default(now())
  check_out_date DateTime @default(now())
  number_of_guests Int
  status         String
  img            Bytes?   
}